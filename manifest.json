{
    "manifest_version": 3,
    "name": "YouTube Video Downloader Extension",
    "version": "1.0.0",
    "description": "Descarga videos de YouTube en diferentes calidades",
    "permissions": [
      "storage",
      "downloads",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://*.youtube.com/*",
      "https://*.googlevideo.com/*",
      "http://localhost:3000/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["lib/*", "icons/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }